body
	background-color #aaa
	padding-top 60px
	background url(/img/mainbk.jpg)


.container
	width 500px

.main_icon
	font-size 23px
	color #fff
	margin 3px 10px 0px

.maindropdown
	cursor pointer
	display none
	.icons
		margin-left 5px
	b
		color #DEDEDE

.box
	background -webkit-linear-gradient(top, rgba(255,255,255,.4) 0%,rgba(255,255,255,.7) 50%, rgba(255,255,255,.9) 100%)
	-webkit-box-shadow 0px 2px 10px #000
	border-radius 7px
	padding 15px
	margin 0px 0px 10px 0px
	position relative


#login
	display none
	margin 0px auto
	width 500px
	.btn
		font-size 16px
		padding 10px
	.intro
		font-size 14px
		margin 0px 0px 15px

#loader
	margin 0px auto
	width 500px
	display none
	.title
		font-size 18px
		font-weight bold
		text-align center
		margin 10px 0px 0px
	#spinner
		height 100px

#watched
	display none
	h2
		color #fff
		margin 10px 0px
	.groupcontainer
		.watched-item
			.title
				.project
					font-size 22px
					font-weight bold
					float left
					width 80%
					color black

				.info
					float left
					width 20%
					text-align right

			.desc
				clear both
				padding 5px 0px
			.link
				i 
					margin-right 5px
			.expander
				color #707070
				font-size 16px
				position absolute
				bottom 10px
				right 15px
				cursor pointer
				&:hover
					color black

			.extra_info
				display none
				background-color rgba(0,0,0,.1)
				border-radius 7px
				padding 5px 10px
				margin 5px -5px 0px
				width 95%

			.remove
				font-size 20px
				position absolute
				right 10px
				bottom 5px
				color #999
				cursor pointer
				&:hover
					color #707070

			.removeconfirm
				display none
				position absolute
				z-index 100
				padding 5px 0px
				right 5px
				bottom -5px
				.btn
					margin 0px 5px





